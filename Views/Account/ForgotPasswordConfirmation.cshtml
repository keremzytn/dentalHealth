@{
    ViewData["Title"] = "Şifre Sıfırlama E-postası Gönderildi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                    <p class="card-text">
                        Şifre sıfırlama bağlantısı e-posta adresinize gönderildi.
                        Lütfen e-postanızı kontrol edin ve bağlantıya tıklayarak şifrenizi sıfırlayın.
                    </p>
                    <p class="card-text">
                        E-posta almadıysanız, spam klasörünüzü kontrol edin veya
                        <a asp-action="ForgotPassword">tekrar deneyin</a>.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>