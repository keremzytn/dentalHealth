@model List<DentalHealthTracker.Models.DentalHealthRecord>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Tarih</th>
                <th>Fırçalama Süresi</th>
                <th>Diş İpi Kullanımı</th>
                <th>Notlar</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var record in Model)
                {
                    <tr>
                        <td>@record.Date.ToShortDateString()</td>
                        <td>@record.BrushingDuration dakika</td>
                        <td>@(record.Flossed ? "Evet" : "Hayır")</td>
                        <td>@record.Notes</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">Henüz kayıt bulunmamaktadır.</td>
                </tr>
            }
        </tbody>
    </table>
</div> 