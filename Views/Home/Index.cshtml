@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-4">Hoş Geldiniz, @User.Identity?.Name</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>Son 7 Günlük Özet</h4>
                </div>
                <div class="card-body">
                    <div id="weeklySummary">
                        <!-- Son 7 günlük veriler AJAX ile yüklenecek -->
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Yükleniyor...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h4>Günün Önerisi</h4>
                </div>
                <div class="card-body">
                    <div id="dailyRecommendation">
                        <!-- Rastgele öneri AJAX ile yüklenecek -->
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Yükleniyor...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Son 7 günlük verileri yükle
            $.get('/Home/GetWeeklySummary', function(data) {
                $('#weeklySummary').html(data);
            });

            // Günün önerisini yükle
            $.get('/Home/GetDailyRecommendation', function(data) {
                $('#dailyRecommendation').html(data);
            });
        });
    </script>
}
